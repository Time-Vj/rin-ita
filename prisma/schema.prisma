datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(CLIENTE)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  IT_SUPPORT
  DIPENDENTE
  CLIENTE
}

